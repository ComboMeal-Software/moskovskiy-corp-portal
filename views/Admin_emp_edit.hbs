<html>
<head id="init">
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0"> 
	<title>{{{title}}}</title>
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">             
	<link href="css/style.css" rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="https://kit.fontawesome.com/54e64f34b2.js" crossorigin="anonymous"></script>
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body> 

		<div class="preloader-wrapper">
			<div class="preloader">
				<img src="images/loader.gif" alt="Loading..." width="100px">
			</div>
		</div>


		<header>
			<div class="container">
				<div class="row">
					<div class="col s3">
						<a href="#" class="logo">
							<img src="images/logo.png" alt="Универмаг Московский">
						</a>
					</div>

					<div class="col s9">
						<ul class="nav">
							<li class="flr">
								<a href="exit">
									Выйти
									<i class="fas fa-sign-out-alt"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</header>


		<div class="wrapper admin">

			<div class="container">
				<div class="row">
					
					<div class="col s12">
						<a href="#" class="btn-c btn-cancel">
							<i class="fas fa-chevron-left"></i>
							Назад
						</a>
					</div>


					<div class="col s12">
						<form action={{{emp_action}}} method="POST" enctype="multipart/form-data" autocomplete>
							<div class="user_banner">
							<div class="user">
								<div class="avatar">
									<img src="{{{avatar}}}" alt="Avatar">
									<input type ="file" accept="image/*" id="avatar" name = "avatar" class="hide">
								</div>
								<div class="details" style="text-align: left; padding-left: 20px;">
									<div class="buttons">
										<div>
											<label for="avatar" class="btn-c btn-cancel btn-sm">
												Загрузить новое фото
											</label>
										</div>
										<br>
										<div><a href="#" class="btn-c btn-cancel btn-sm">
											Удалить
										</a></div>
									</div>
								</div>
							</div>

							<div class="user_edit">
								<div class="input-field">
									<input value="{{user.name}} {{user.lastname}} {{user.patronyc}}" id="name" type="text" name="name" class="validate">
									<label for="name">ФИО</label>
								</div>

								<div class="input-field">
									<select>
										<option name="department" value="" >Выберите отдел</option>

										{{#each department_list}}
										<option value="{{this.id}}">{{this.name}}</option>
										{{/each}}
									</select>
									<label>Отдел</label>
								</div>
								<div class="input-field">
									<input id="position" type="text" name="position" value="{{{user.position}}}">
									<label for="position">Должность</label>
								</div>
								<div class="input-field">
									<input id="login" type="text" class="validate" name="login" value="{{{user.login}}}">
									<label for="login">Email</label>
								</div>
								<div class="input-field">
									<input id="password" type="password" class="validate" name="password" value="{{{user.password}}}">
									<label for="password">Пароль</label>
								</div>
								<div class="tar">
									<button type="submit" class="btn-c btn-primary">Сохранить</a>
									<button type="reset" class="btn-c btn-cancel">Отмена</a>
								</div>
							</div>
							</div> 
						</form>
					</div>
					

				</div>
			</div>

		</div>

		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>  
		<script src="https://www.chartjs.org/dist/2.9.3/Chart.min.js"></script>
		<script src="js/script.js"></script>

	</body>
	</html>