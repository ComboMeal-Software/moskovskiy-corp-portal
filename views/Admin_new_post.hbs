	<body> 

		<div class="preloader-wrapper">
			<div class="preloader">
				<img src="images/loader.gif" alt="Loading..." width="100px">
				<input type="file" name="avatar" accept="image/*">
			</div>
		</div>


		<header>
			<div class="container">
				<div class="row">
					<div class="col s3">
						<a href="#" class="logo">
							<img src="images/logo.png" alt="Универмаг Московский">
						</a>
					</div>

					<div class="col s9">
						<ul class="nav">
							<li class="flr">
								<a href="#">
									Выйти
									<i class="fas fa-sign-out-alt"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</header>


		<div class="wrapper admin">

			<div class="container">
				<div class="row">
					<div class="col s12">
						<form class="new_post_form">
							<div class="input-field">
								<input placeholder="Заголовок" id="first_name" type="text" class="validate">
							</div>
							<div class="input-field">

								<div class="post_form_file">
									<i class="fas fa-camera" id="post_form_file_icon"></i>
									<input type="file" name="" id="file_input">
								</div>

								<textarea id="textarea1" cols="30" rows="10" placeholder="Введите текст" class="materialize-textarea"></textarea>
							</div>

							<div class="tar">
								<a class="btn-c btn-primary">Опубликовать</a>
								<a class="btn-c btn-cancel">Отмена</a>
							</div>
						</form>
					</div>
				</div>
			</div>

		</div>



		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>  
		<script src="js/script.js"></script>
	</body>
	</html>